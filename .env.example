# =============================================================================
# RecurPay Protocol - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Network RPC URLs
# -----------------------------------------------------------------------------

# Base Mainnet (Production)
BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia (Testnet)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Local Development
LOCAL_RPC_URL=http://127.0.0.1:8545

# -----------------------------------------------------------------------------
# Deployment Configuration
# -----------------------------------------------------------------------------

# Deployer wallet private key (without 0x prefix)
# WARNING: Use a dedicated deployment wallet, not your main wallet
PRIVATE_KEY=

# -----------------------------------------------------------------------------
# Contract Verification
# -----------------------------------------------------------------------------

# BaseScan API Key (https://basescan.org/apis)
BASESCAN_API_KEY=

# -----------------------------------------------------------------------------
# Protocol Configuration
# -----------------------------------------------------------------------------

# Protocol fee in basis points (100 = 1%)
PROTOCOL_FEE_BPS=100

# Treasury address for protocol fees
TREASURY_ADDRESS=

# -----------------------------------------------------------------------------
# Optional: Testing Configuration
# -----------------------------------------------------------------------------

# Fork block number for mainnet forking tests
FORK_BLOCK_NUMBER=

# Etherscan API Key (for mainnet forking)
ETHERSCAN_API_KEY=
